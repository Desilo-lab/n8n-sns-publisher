      "id": "filter-content-path",
      "name": "Filter content/posts/",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "functionCode": "// Î≥ÄÍ≤ΩÎêú ÌååÏùº Í≤ΩÎ°úÎì§ Ï∂îÏ∂ú\nconst commits = items[0].json.commits || [];\nconst files = [];\n\nfor (const commit of commits) {\n  const allFiles = [...(commit.added || []), ...(commit.modified || [])];\n  for (const file of allFiles) {\n    if (file.startsWith('content/posts/') && file.endsWith('.md')) {\n      files.push({\n        path: file,\n        repo: items[0].json.repository.full_name,\n        branch: items[0].json.ref.replace('refs/heads/', '')\n      });\n    }\n  }\n}\n\nreturn files.map(f => ({ json: f }));"
      },
      "id": "extract-files",
      "name": "Extract Post Files",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "url": "=https://raw.githubusercontent.com/{{ $json.repo }}/{{ $json.branch }}/{{ $json.path }}",
        "options": {}
      },
      "id": "fetch-content",
      "name": "Fetch Content",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [850, 300]
    },
    {
      "parameters": {
        "functionCode": "// ÎßàÌÅ¨Îã§Ïö¥ ÌîÑÎ°†Ìä∏Îß§ÌÑ∞ ÌååÏã±\nconst content = items[0].json.data || items[0].json.body || '';\nconst frontmatterRegex = /^---\\n([\\s\\S]*?)\\n---\\n([\\s\\S]*)$/;\nconst match = content.match(frontmatterRegex);\n\nlet meta = {};\nlet body = content;\n\nif (match) {\n  const yamlStr = match[1];\n  body = match[2].trim();\n  \n  // Í∞ÑÎã®Ìïú YAML ÌååÏã±\n  yamlStr.split('\\n').forEach(line => {\n    const [key, ...valueParts] = line.split(':');\n    if (key && valueParts.length) {\n      let value = valueParts.join(':').trim();\n      // Î∞∞Ïó¥ Ï≤òÎ¶¨ [x, threads, linkedin]\n      if (value.startsWith('[') && value.endsWith(']')) {\n        value = value.slice(1, -1).split(',').map(s => s.trim());\n      }\n      meta[key.trim()] = value;\n    }\n  });\n}\n\n// ÌîåÎû´ÌèºÎ≥Ñ ÌÖçÏä§Ìä∏ Í∏∏Ïù¥ Ï°∞Ï†ï\nconst title = meta.title || '';\nconst platforms = meta.platforms || ['x', 'threads', 'linkedin'];\nconst image = meta.image || null;\n\n// XÎäî 280Ïûê Ï†úÌïú\nconst xText = body.length > 270 ? body.substring(0, 267) + '...' : body;\n\n// Threads/LinkedInÏùÄ Îçî Í∏∏Ïñ¥ÎèÑ Îê®\nconst threadsText = body.length > 500 ? body.substring(0, 497) + '...' : body;\nconst linkedinText = body;\n\nreturn [{\n  json: {\n    title,\n    body,\n    image,\n    platforms: Array.isArray(platforms) ? platforms : [platforms],\n    xText,\n    threadsText,\n    linkedinText,\n    publishX: Array.isArray(platforms) ? platforms.includes('x') : true,\n    publishThreads: Array.isArray(platforms) ? platforms.includes('threads') : true,\n    publishLinkedin: Array.isArray(platforms) ? platforms.includes('linkedin') : true\n  }\n}];"
      },
